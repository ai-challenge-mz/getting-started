executable idle-bot
  main-is: IdleBot.hs
  build-depends: base >=4.6
  ghc-options: -Wall -ferror-spans
  default-language: Haskell2010

executable sabbatical-bot
  main-is: SabbaticalBot.hs
  build-depends: base >=4.6
  ghc-options: -Wall -ferror-spans
  default-language: Haskell2010


executable bully-bot
  main-is: BullyBot.hs
  build-depends: base >=4.6
  ghc-options: -Wall -ferror-spans
  default-language: Haskell2010

executable tcp-idle-bot
  main-is: TCPIdleBot.hs
  build-depends:
      base >=4.6
    , network
    , network-simple
  ghc-options: -Wall -ferror-spans -threaded
  default-language: Haskell2010

executable judge
  main-is: Judge.hs
  build-depends:
      base >= 4.6
    , aeson
    , aeson-pretty
    , bytestring
    , containers
    , docopt >= 0.7
    , network
    , network-simple
    , process
    , scientific
    , text
    , timeout
    , vector
  ghc-options: -Wall -ferror-spans -threaded
  default-language: Haskell2010
